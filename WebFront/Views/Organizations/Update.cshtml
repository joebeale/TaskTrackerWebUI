@model WebFront.Models.EditOrganizationViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>DTO_Organization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="editMe.pkOrgID"  class="control-label">ID</label>
                <input asp-for="editMe.pkOrgID" class="form-control" />
                <span asp-validation-for="editMe.pkOrgID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="editMe.org_ShortName" class="control-label">Short Name</label>
                <input asp-for="editMe.org_ShortName" class="form-control" />
                <span asp-validation-for="editMe.org_ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="editMe.org_LongName" class="control-label">Long Name</label>
                <input asp-for="editMe.org_LongName" class="form-control" />
                <span asp-validation-for="editMe.org_LongName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="editMe.org_IsActive" /> Is Active
                </label>
            </div>
            <div class="form-group">
                <label asp-for="editMe.Parent.pkOrgID">
                    Parent Organization<br />
                    <select asp-for="strParentID" asp-items="Model.ParentOrgListItems"></select>                  
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
