@model WebFront.Models.DTO_Organization

@{
    ViewData["Title"] = "Create New Organization";
}

<h1>Create New</h1>

<h4>Organization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>         
            <div class="form-group">
                <label asp-for="org_ShortName" class="control-label">Short Name</label>
                <input asp-for="org_ShortName" class="form-control" />
                <span asp-validation-for="org_ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="org_LongName" class="control-label">Long Name</label>
                <input asp-for="org_LongName" class="form-control" />
                <span asp-validation-for="org_LongName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="org_IsActive" /> Is Active
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
